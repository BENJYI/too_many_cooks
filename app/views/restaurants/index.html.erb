<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Address</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td>
          <!-- star rating -->
          <%= render partial: "star_rating", locals: { restaurant: restaurant } %>
        </td>
        <td><%= link_to  'View Restaurant', restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>